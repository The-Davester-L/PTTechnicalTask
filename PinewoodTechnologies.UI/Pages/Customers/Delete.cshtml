@page "{id:int}"
@model PinewoodTechnologies.UI.Pages.Customers.DeleteModel
@{
    ViewData["Title"] = "Delete Customer";
}

<h2>Delete Customer</h2>

<h3>Are you sure you want to delete this customer?</h3>

<div class="card p-4 shadow">
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.Customer.FirstName</dd>
        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.Customer.LastName</dd>
        <!-- Include other fields as needed -->
        <dt class="col-sm-2">Date of Birth</dt>
        <dd class="col-sm-10">@Model.Customer.DoB.ToShortDateString()</dd>
        <!-- ... -->
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Customer.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
